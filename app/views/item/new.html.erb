<h3>New Item for <%= @actual_list.title %></h3>

<%= form_for :item do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :list_title %><br />
    <%= f.text_field :list_title, :value => @list_title %>
  </p>

  <p>
    <%= link_to 'Back', list_path(@actual_list), class: 'btn btn-danger btn-xs' %>
    <%= f.submit %>
  </p> 
  
<% end %>