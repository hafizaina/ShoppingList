<p id="notice"><%= notice %></p>

<h1>Here are your lists.</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Show', list_path(list, :list_title => list.title), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_list_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New List
<% end %>
